{
  "ui": {
    "title": "Paperless Document Assistant",
    "subtitle": "Your Personal Knowledge Base",
    "default_models": ["paperless-rag"],
    "show_username": true,
    "show_timestamp": true,
    "theme": "dark"
  },
  "chat": {
    "default_system_prompt": "paperless-expert",
    "max_turns": 50,
    "enable_message_rating": true,
    "enable_message_editing": true,
    "show_model_selector": true,
    "enable_auto_scroll": true
  },
  "features": {
    "enable_signup": true,
    "enable_login_form": true,
    "enable_web_search": false,
    "enable_image_generation": false,
    "enable_community_sharing": false,
    "default_user_role": "user"
  },
  "rag": {
    "enabled": true,
    "web_search": false,
    "local_web_fetch": true,
    "chunk_size": 600,
    "chunk_overlap": 100,
    "top_k": 5,
    "similarity_threshold": 0.75
  },
  "models": {
    "default_temperature": 0.1,
    "default_top_p": 0.9,
    "default_max_tokens": 2048,
    "show_model_info": true
  }
}
